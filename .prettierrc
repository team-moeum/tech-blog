{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "proseWrap": "preserve",
  "endOfLine": "auto",
  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "off",
  "importOrder":
    [
      "^@app/(.*)$",
      "^@providers/(.*)$",
      "^@api/(.*)$",
      "^@types/(.*)$",
      "^@utils/(.*)$",
      "^@hooks/(.*)$",
      "^@components/(.*)$",
      "^@styles/(.*)$",
      "^[./]"
    ],
  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
